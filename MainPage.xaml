<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Page"
             x:Class="SimpleCollectionView.MainPage">
    <HorizontalStackLayout BackgroundColor="Yellow">
        <Button BackgroundColor="Green" HeightRequest="30" Text="{Binding Height, Source={x:RelativeSource Self},x:DataType=Button}"/>
        <Rectangle Background="Red" HeightRequest="30" WidthRequest="30"/>
        <Button BackgroundColor="Green" HeightRequest="44" Text="{Binding Height, Source={x:RelativeSource Self},x:DataType=Button}"/>
    </HorizontalStackLayout></ContentPage>
